{
  "name": "monipx",
  "version": "1.0.0",
  "description": "A self-hosted IP address inventory and network monitoring tool",
  "main": "server/server.js",
  "scripts": {
    "setup": "npm install && npm run build",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/server.js",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/server.js",
    "test": "jest",
    "lint": "eslint . --ext .js,.vue",
    "format": "prettier --write \"**/*.{js,json,vue,md}\""
  },
  "keywords": [
    "monitoring",
    "network",
    "ip-address",
    "subnet",
    "uptime",
    "self-hosted"
  ],
  "author": "Arnold Mwanza",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dockerode": "^4.0.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^7.0.0",
    "mysql2": "^3.16.0",
    "pg": "^8.16.3",
    "ping": "^0.4.4",
    "redis": "^5.10.0",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "axios": "^1.6.2",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.3",
    "chart.js": "^4.4.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pinia": "^2.1.7",
    "prettier": "^3.1.1",
    "socket.io-client": "^4.7.2",
    "vite": "^5.0.8",
    "vue": "^3.3.11",
    "vue-chartjs": "^5.2.0",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5"
  },
  "engines": {
    "node": ">=20.4.0",
    "npm": ">=10.0.0"
  }
}
